@model List<Product>

<div class="container mx-auto mt-10 px-4">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Product List</h2>
        <a asp-controller="Product" asp-action="Upsert" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow flex items-center">
            <i class="bi bi-plus-circle mr-2"></i> Create New Product
        </a>
    </div>

    <div class="bg-white shadow-md rounded my-6 overflow-x-auto">
        <table class="min-w-full w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Title</th>
                    <th class="py-3 px-6 text-left">ISBN</th>
                    <th class="py-3 px-6 text-left">Price</th>
                    <th class="py-3 px-6 text-left">Category</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                @foreach (var obj in Model)
                {
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left font-medium">@obj.Title</td>
                        <td class="py-3 px-6 text-left">@obj.ISBN</td>
                        <td class="py-3 px-6 text-left">@obj.Price.ToString("c")</td>
                        <td class="py-3 px-6 text-left">@obj.Category.Name</td>
                        <td class="py-3 px-6 text-center">
                            <div class="flex item-center justify-center space-x-2">

                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id"
                                   class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded shadow flex items-center transition">
                                    <i class="bi bi-pencil-square mr-1"></i> Edit
                                </a>

                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                                   class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded shadow flex items-center transition">
                                    <i class="bi bi-trash3 mr-1"></i> Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>