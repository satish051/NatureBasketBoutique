@using NatureBasketBoutique.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">
            <i class="bi bi-box-seam-fill"></i> Manage Products
        </h2>

        <a asp-controller="Product" asp-action="Upsert" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow transition flex items-center">
            <i class="bi bi-plus-circle mr-2"></i> Create New Product
        </a>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
        <div class="p-4">
            <table id="tblData" class="w-full text-sm text-left text-gray-500 hover:table-fixed">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-3">Title</th>
                        <th class="px-6 py-3">ISBN</th>
                        <th class="px-6 py-3">List Price</th>
                        <th class="px-6 py-3">Price</th>
                        <th class="px-6 py-3">Category</th>
                        <th class="px-6 py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr class="bg-white border-b hover:bg-gray-50 transition">
                            <td class="px-6 py-4 font-medium text-gray-900">@obj.Title</td>
                            <td class="px-6 py-4">@obj.ISBN</td>
                            <td class="px-6 py-4">NPR @obj.ListPrice.ToString("0.00")</td>
                            <td class="px-6 py-4">NPR @obj.Price.ToString("0.00")</td>
                            <td class="px-6 py-4">@(obj.Category != null ? obj.Category.Name : "N/A")</td>
                            <td class="px-6 py-4 text-center space-x-4">
                                <a asp-action="Upsert" asp-route-id="@obj.Id"
                                   class="text-blue-600 hover:text-blue-800 transition text-xl" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@obj.Id"
                                   class="text-red-600 hover:text-red-800 transition text-xl" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}