@model NatureBasketBoutique.ViewModels.ProductVM

@{
    ViewData["Title"] = (Model.Product.Id != 0 ? "Edit" : "Create") + " Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-12 flex justify-center">
    <div class="w-full max-w-4xl bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">

        <div class="bg-green-600 px-8 py-5">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
                <i class="bi bi-box-seam"></i> @(Model.Product.Id != 0 ? "Edit" : "Create") Product
            </h2>
        </div>

        <form method="post" enctype="multipart/form-data" class="p-8 space-y-6">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div class="col-span-2">
                    <label asp-for="Product.Title" class="block text-sm font-bold text-gray-700 mb-2">Product Name</label>
                    <input asp-for="Product.Title" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition" placeholder="e.g. Organic Apple" />
                    <span asp-validation-for="Product.Title" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Product.ISBN" class="block text-sm font-bold text-gray-700 mb-2">SKU / Code</label>
                    <input asp-for="Product.ISBN" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition" placeholder="e.g. SKU-123" />
                    <span asp-validation-for="Product.ISBN" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Product.CategoryId" class="block text-sm font-bold text-gray-700 mb-2">Category</label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition bg-white">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Product.ListPrice" class="block text-sm font-bold text-gray-700 mb-2">Market Price (NPR)</label>
                    <input asp-for="Product.ListPrice" id="txtListPrice" onchange="fillSellingPrice()"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition" placeholder="e.g. 150" />
                    <span asp-validation-for="Product.ListPrice" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Product.Price" class="block text-sm font-bold text-gray-700 mb-2">Selling Price (NPR)</label>
                    <input asp-for="Product.Price" id="txtPrice" onchange="fillMarketPrice()"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition" placeholder="Auto-filled if empty" />
                    <span asp-validation-for="Product.Price" class="text-red-500 text-xs"></span>
                </div>

                <div class="col-span-2">
                    <label asp-for="Product.Description" class="block text-sm font-bold text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Product.Description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 transition" placeholder="Describe the product..."></textarea>
                    <span asp-validation-for="Product.Description" class="text-red-500 text-xs"></span>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-bold text-gray-700 mb-2">Product Image</label>
                    <input type="file" name="file" class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50 focus:ring-2 focus:ring-green-500 transition" />

                    @if (Model.Product.ImageUrl != null)
                    {
                        <div class="mt-4 p-2 border border-gray-200 rounded-lg inline-block bg-gray-50">
                            <p class="text-xs text-gray-500 mb-1">Current Image:</p>
                            <img src="@Model.Product.ImageUrl" width="100" class="rounded shadow-sm" />
                        </div>
                    }
                </div>

            </div>

            <div class="flex justify-between items-center pt-6 border-t border-gray-100 mt-4">
                <a asp-action="Index" class="text-gray-600 hover:text-green-700 font-semibold text-sm border border-gray-300 px-5 py-2.5 rounded-lg hover:bg-gray-50 transition">
                    Back to List
                </a>
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2.5 px-8 rounded-lg shadow-md hover:shadow-xl transition transform hover:-translate-y-0.5">
                    @(Model.Product.Id != 0 ? "Update" : "Create")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Scenario 1: User types Market Price first
        function fillSellingPrice() {
            var marketPrice = document.getElementById("txtListPrice").value;
            var sellingPriceInput = document.getElementById("txtPrice");

            // Only copy if Selling Price is currently empty
            if (sellingPriceInput.value === "" || sellingPriceInput.value == 0) {
                sellingPriceInput.value = marketPrice;
            }
        }

        // Scenario 2: User types Selling Price first
        function fillMarketPrice() {
            var sellingPrice = document.getElementById("txtPrice").value;
            var marketPriceInput = document.getElementById("txtListPrice");

            // Only copy if Market Price is currently empty
            if (marketPriceInput.value === "" || marketPriceInput.value == 0) {
                marketPriceInput.value = sellingPrice;
            }
        }
    </script>
}