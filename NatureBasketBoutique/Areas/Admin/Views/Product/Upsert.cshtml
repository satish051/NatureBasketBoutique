@model NatureBasketBoutique.ViewModels.ProductVM

@{
    ViewData["Title"] = (Model.Product.Id != 0 ? "Edit" : "Create") + " Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<style>
    /* Custom override to make Select2 match Tailwind/Bootstrap inputs */
    .select2-container .select2-selection--single {
        height: 42px !important;
        border: 1px solid #d1d5db !important;
        border-radius: 0.375rem !important;
        padding: 6px 0 0 4px !important;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        top: 8px !important;
    }
</style>

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
        <div class="bg-green-700 p-4">
            <h2 class="text-2xl font-bold text-white flex items-center">
                <i class="bi @(Model.Product.Id != 0 ? "bi-pencil-square" : "bi-plus-circle-fill") mr-2"></i>
                @(Model.Product.Id != 0 ? "Edit" : "Create") Product
            </h2>
        </div>

        <form method="post" enctype="multipart/form-data" class="p-6">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @if (Model.Product.Id != 0)
                {
                    <div class="col-span-1 md:col-span-2 flex justify-center mb-4">
                        <img src="@Model.Product.ImageUrl" class="h-48 rounded shadow-md border" alt="Product Image" />
                    </div>
                }

                <div class="col-span-2">
                    <label asp-for="Product.Title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                    <input asp-for="Product.Title" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                    <span asp-validation-for="Product.Title" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Product.ISBN" class="block text-sm font-medium text-gray-700 mb-1">ISBN / Code</label>
                    <input asp-for="Product.ISBN" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                    <span asp-validation-for="Product.ISBN" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Product.CategoryId" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                    <select id="categorySelect" asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-red-500 text-sm"></span>
                </div>

                <div class="hidden md:block"></div>

                <div>
                    <label asp-for="Product.ListPrice" class="block text-sm font-medium text-gray-700 mb-1">
                        List Price (MRP) <span class="text-gray-400 text-xs">(Optional)</span>
                    </label>
                    <input asp-for="Product.ListPrice" data-val="false" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                </div>
                <div>
                    <label asp-for="Product.Price" class="block text-sm font-medium text-gray-700 mb-1">
                        Price (Discounted) <span class="text-gray-400 text-xs">(Optional)</span>
                    </label>
                    <input asp-for="Product.Price" data-val="false" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                </div>

                <div class="col-span-2">
                    <label asp-for="Product.Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea asp-for="Product.Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm"></textarea>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Product Image</label>
                    <input type="file" name="file" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                </div>
            </div>

            <div class="flex justify-between items-center pt-4 border-t border-gray-100 mt-6">
                <a asp-action="Index" class="text-gray-600 hover:text-gray-900 font-medium">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded shadow transition">
                    @(Model.Product.Id != 0 ? "Update" : "Create")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // 3. Initialize Select2
            $('#categorySelect').select2({
                placeholder: "-- Search & Select Category --",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}