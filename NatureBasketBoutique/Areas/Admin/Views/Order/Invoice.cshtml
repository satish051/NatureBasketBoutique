@model NatureBasketBoutique.ViewModels.OrderVM

@{
    ViewData["Title"] = "Invoice";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@Model.OrderHeader.DisplayId</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        /* This hides the print button when actually printing on paper/PDF */
        @@media print {
            .no-print {
                display: none;
            }

            body {
                -webkit-print-color-adjust: exact;
            }
        }
    </style>
</head>

<body class="bg-gray-100 p-8">

    <div class="max-w-4xl mx-auto bg-white p-10 rounded-lg shadow-lg" id="invoice">

        <div class="flex justify-between items-center mb-10 border-b pb-8">
            <div>
                <h1 class="text-4xl font-bold text-green-700 flex items-center gap-2">
                    <i class="bi bi-basket-fill"></i> Nature Basket
                </h1>
                <p class="text-gray-500 mt-2">Pure Nature, Delivered.</p>
            </div>
            <div class="text-right">
                <h2 class="text-2xl font-bold text-gray-700">INVOICE</h2>
                <p class="text-gray-600">Inv #: @Model.OrderHeader.Id</p>
                <p class="text-gray-600">Date: @Model.OrderHeader.OrderDate.ToShortDateString()</p>
            </div>
        </div>

        <div class="flex justify-between mb-10">
            <div>
                <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Billed To:</h3>
                <p class="font-bold text-gray-800">@Model.OrderHeader.Name</p>
                <p class="text-gray-600">@Model.OrderHeader.StreetAddress</p>
                <p class="text-gray-600">@Model.OrderHeader.City, @Model.OrderHeader.State @Model.OrderHeader.PostalCode</p>
                <p class="text-gray-600">@Model.OrderHeader.PhoneNumber</p>
            </div>
            <div class="text-right">
                <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Shipped To:</h3>
                <p class="font-bold text-gray-800">@Model.OrderHeader.Name</p>
                <p class="text-gray-600">@Model.OrderHeader.StreetAddress</p>
                <p class="text-gray-600">@Model.OrderHeader.City, @Model.OrderHeader.State @Model.OrderHeader.PostalCode</p>
            </div>
        </div>

        <div class="mb-8">
            <table class="w-full text-left">

                <thead>
                    <tr class="bg-gray-100 text-gray-600 text-sm uppercase">
                        <th class="py-3 px-4">Item</th>
                        <th class="py-3 px-4 text-center">Quantity</th>
                        <th class="py-3 px-4 text-right">Price</th>
                        <th class="py-3 px-4 text-right">Total</th>
                    </tr>
                </thead>

                <tbody class="text-gray-700">
                    @foreach (var item in Model.OrderDetail)
                    {
                        <tr class="border-b border-gray-100">
                            <td class="py-3 px-4 font-bold">@item.Product.Title</td>
                            <td class="py-3 px-4 text-center">@item.Count</td>
                            <td class="py-3 px-4 text-right">Rs. @item.Price</td>
                            <td class="py-3 px-4 text-right">Rs. @((item.Count * item.Price).ToString("0.00"))</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="flex justify-end border-t pt-6">
            <div class="w-1/3">
                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Subtotal</span>
                    <span class="font-bold">Rs. @Model.OrderHeader.OrderTotal.ToString("0.00")</span>
                </div>
                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Shipping</span>
                    <span class="font-bold text-green-600">Free</span>
                </div>
                <div class="flex justify-between border-t pt-4 mt-2">
                    <span class="text-xl font-bold text-gray-800">Total</span>
                    <span class="text-xl font-bold text-green-700">Rs. @Model.OrderHeader.OrderTotal.ToString("0.00")</span>
                </div>
            </div>
        </div>

        <div class="mt-12 text-center text-sm text-gray-500 border-t pt-6">
            <p>Thank you for your business!</p>
            <p>If you have any questions about this invoice, please contact support@naturebasket.com</p>
        </div>

    </div>

    <div class="fixed bottom-10 right-10 no-print">
        <button onclick="window.print()" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full shadow-xl flex items-center gap-2 transition transform hover:scale-105">
            <i class="bi bi-printer"></i> Print / Save PDF
        </button>
    </div>

</body>
</html>