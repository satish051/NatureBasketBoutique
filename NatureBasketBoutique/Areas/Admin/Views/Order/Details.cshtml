@model NatureBasketBoutique.ViewModels.OrderVM
@using NatureBasketBoutique.Utility

<form method="post">
    <input asp-for="OrderHeader.Id" hidden />
    <div class="container mx-auto mt-6 px-4">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">

            <div class="bg-green-700 text-white p-4 flex justify-between items-center">
                <h2 class="text-xl font-bold flex items-center">
                    <i class="bi bi-cart-check mr-2"></i> Order Summary
                </h2>
                <a asp-action="Index" class="bg-green-600 hover:bg-green-500 text-white px-4 py-2 rounded text-sm transition">
                    Back to Orders
                </a>
            </div>

            <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-8">

                <div>
                    <h4 class="text-lg font-bold text-gray-700 mb-4 border-b pb-2">PickUp Details</h4>

                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Name</label>
                            <input asp-for="OrderHeader.Name"  class="w-full bg-gray-100 border rounded px-3 py-2 text-gray-700" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Phone</label>
                            <input asp-for="OrderHeader.PhoneNumber" class="w-full bg-gray-100 border rounded px-3 py-2 text-gray-700" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Address</label>
                            <input asp-for="OrderHeader.StreetAddress" class="w-full bg-gray-100 border rounded px-3 py-2 text-gray-700" />
                        </div>
                        <div class="flex gap-4">
                            <div class="w-1/3">
                                <label class="block text-sm font-medium text-gray-600">City</label>
                                <input asp-for="OrderHeader.City" class="w-full bg-white border rounded px-3 py-2 text-gray-700 focus:outline-none focus:border-green-500" />
                            </div>
                            <div class="w-1/3">
                                <label class="block text-sm font-medium text-gray-600">State</label>
                                <input asp-for="OrderHeader.State" class="w-full bg-white border rounded px-3 py-2 text-gray-700 focus:outline-none focus:border-green-500" />
                            </div>
                            <div class="w-1/3">
                                <label class="block text-sm font-medium text-gray-600">Zip Code</label>
                                <input asp-for="OrderHeader.PostalCode" class="w-full bg-white border rounded px-3 py-2 text-gray-700 focus:outline-none focus:border-green-500" />
                            </div>
                        </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Email</label>
                            <input asp-for="OrderHeader.ApplicationUser.Email" class="w-full bg-gray-100 border rounded px-3 py-2 text-gray-700" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Order Date</label>
                            <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" class="w-full bg-gray-100 border rounded px-3 py-2 text-gray-700" />
                        </div>
                    </div>
                </div>

                <div>
                    <h4 class="text-lg font-bold text-gray-700 mb-4 border-b pb-2">Order Summary</h4>

                    <div class="border rounded-lg p-4 mb-4">
                        <div class="flex justify-between items-center mb-4">
                            <span class="font-bold text-gray-600">Order Status:</span>
                            <span class="px-3 py-1 rounded-full text-sm font-bold bg-blue-100 text-blue-800">
                                @Model.OrderHeader.OrderStatus
                            </span>
                        </div>

                        <ul class="divide-y divide-gray-200">
                            @foreach (var detail in Model.OrderDetail)
                            {
                                <li class="py-3 flex justify-between">
                                    <div>
                                        <h6 class="text-green-700 font-bold">@detail.Product.Title</h6>
                                        <small class="text-gray-500">Price: Rs. @detail.Price</small>
                                        <small class="text-gray-500"> | Qty: @detail.Count</small>
                                    </div>
                                    <div class="text-gray-800 font-bold">
                                        Rs. @((detail.Count * detail.Price).ToString("0.00"))
                                    </div>
                                </li>
                            }
                        </ul>

                        <div class="bg-gray-800 text-white p-3 rounded mt-4 flex justify-between items-center">
                            <span class="font-bold">TOTAL</span>
                            <span class="text-xl font-bold">Rs. @Model.OrderHeader.OrderTotal.ToString("0.00")</span>
                        </div>
                    </div>

                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                    {
                    <button type="submit" asp-action="UpdateOrderDetail"
                            class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded shadow transition mb-2">
                        Update Order Details
                    </button>
                    }

                        <div class="mt-4 space-y-2">
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                @if (Model.OrderHeader.OrderStatus == SD.StatusApproved)
                                {
                                    <button type="submit" asp-action="StartProcessing"
                                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded shadow transition">
                                        Start Processing
                                    </button>
                                }
                                @if (Model.OrderHeader.OrderStatus == SD.StatusInProcess)
                                {
                                    <button type="submit" asp-action="ShipOrder" onclick="return validateInput()"
                                            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded shadow transition">
                                        Ship Order
                                    </button>
                                }

                                @if (Model.OrderHeader.OrderStatus != SD.StatusRefunded &&
                                                            Model.OrderHeader.OrderStatus != SD.StatusCancelled &&
                                                            Model.OrderHeader.OrderStatus != SD.StatusShipped)
                                {
                                    <button type="submit" asp-action="CancelOrder"
                                            class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 rounded shadow transition">
                                        Cancel Order
                                    </button>
                                }
                                @if (Model.OrderHeader.OrderStatus == SD.StatusCancelled || Model.OrderHeader.OrderStatus == SD.StatusRefunded)
                                {
                                    <button type="submit" asp-action="RevertCancel"
                                            class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 rounded shadow transition mt-2">
                                        <i class="bi bi-arrow-counterclockwise"></i> Reopen Order
                                    </button>
                                }
                            }
                        </div>

                </div>
            </div>
        </div>
    </div>
</form>