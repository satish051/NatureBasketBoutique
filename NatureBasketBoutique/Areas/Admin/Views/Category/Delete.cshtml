@model Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-12 flex justify-center">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg overflow-hidden border border-red-100">

        <div class="bg-red-600 px-8 py-5">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
                <i class="bi bi-trash-fill"></i> Delete Category
            </h2>
        </div>

        <form method="post" class="p-8 space-y-6">
            <input asp-for="Id" hidden />

            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
                <p class="text-sm text-red-700">
                    <span class="font-bold">Warning:</span> Are you sure you want to delete this category? This action cannot be undone.
                </p>
            </div>

            <div>
                <label asp-for="Name" class="block text-sm font-bold text-gray-700 mb-2">Category Name</label>
                <input asp-for="Name" disabled class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-500 cursor-not-allowed" />
            </div>

            <div>
                <label asp-for="DisplayOrder" class="block text-sm font-bold text-gray-700 mb-2">Display Order</label>
                <input asp-for="DisplayOrder" disabled class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-500 cursor-not-allowed" />
            </div>

            <div class="flex justify-between items-center pt-6 border-t border-gray-100 mt-4">
                <a asp-action="Index" class="text-gray-600 hover:text-gray-900 font-semibold text-sm border border-gray-300 px-5 py-2.5 rounded-lg hover:bg-gray-50 transition">
                    Back to List
                </a>
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2.5 px-8 rounded-lg shadow-md hover:shadow-xl transition transform hover:-translate-y-0.5 flex items-center gap-2">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
            </div>
        </form>
    </div>
</div>