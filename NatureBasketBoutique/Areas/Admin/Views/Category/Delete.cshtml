@model Category
@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-red-200">
        <div class="bg-red-700 p-4">
            <h2 class="text-2xl font-bold text-white flex items-center">
                <i class="bi bi-trash-fill mr-2"></i> Delete Category
            </h2>
        </div>

        <form method="post" class="p-6">
            <input asp-for="Id" hidden />

            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                <p class="text-red-700 font-medium">Are you sure you want to delete this category? This action cannot be undone.</p>
            </div>

            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Category Name</label>
                    <input asp-for="Name" disabled class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md text-gray-600 cursor-not-allowed" />
                </div>

                <div>
                    <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
                    <input asp-for="DisplayOrder" disabled class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md text-gray-600 cursor-not-allowed" />
                </div>

                <div class="flex justify-between items-center pt-4 border-t border-gray-100 mt-6">
                    <a asp-controller="Category" asp-action="Index" class="text-gray-600 hover:text-gray-900 font-medium">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded shadow transition">
                        <i class="bi bi-trash-fill"></i> Delete Permanently
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
</div>