@model Category
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
        <div class="bg-green-700 p-4">
            <h2 class="text-2xl font-bold text-white flex items-center">
                <i class="bi bi-pencil-square mr-2"></i> Edit Category
            </h2>
        </div>

        <form method="post" class="p-6">
            <input asp-for="Id" hidden />

            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Category Name</label>
                    <input asp-for="Name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" placeholder="e.g. Vegetables" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
                    <input asp-for="DisplayOrder" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 shadow-sm" />
                    <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="flex justify-between items-center pt-4 border-t border-gray-100 mt-6">
                    <a asp-controller="Category" asp-action="Index" class="text-gray-600 hover:text-gray-900 font-medium">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded shadow transition">
                        Update
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}