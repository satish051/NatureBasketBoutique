@model Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-12 flex justify-center">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">

        <div class="bg-green-600 px-8 py-5">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
                <i class="bi bi-pencil-square"></i> Edit Category
            </h2>
        </div>

        <form method="post" class="p-8 space-y-6">
            <input asp-for="Id" hidden />

            <div>
                <label asp-for="Name" class="block text-sm font-bold text-gray-700 mb-2">Category Name</label>
                <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition shadow-sm" />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1 font-semibold"></span>
            </div>

            <div>
                <label asp-for="DisplayOrder" class="block text-sm font-bold text-gray-700 mb-2">Display Order</label>
                <input asp-for="DisplayOrder" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition shadow-sm" />
                <span asp-validation-for="DisplayOrder" class="text-red-500 text-xs mt-1 font-semibold"></span>
            </div>

            <div class="flex justify-between items-center pt-6 border-t border-gray-100 mt-4">
                <a asp-action="Index" class="text-gray-600 hover:text-green-700 font-semibold text-sm border border-gray-300 px-5 py-2.5 rounded-lg hover:bg-gray-50 transition">
                    Back to List
                </a>
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2.5 px-8 rounded-lg shadow-md hover:shadow-xl transition transform hover:-translate-y-0.5">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}