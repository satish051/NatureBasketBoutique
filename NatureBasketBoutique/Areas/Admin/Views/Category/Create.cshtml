@using NatureBasketBoutique
@using NatureBasketBoutique.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Category

<div class="w-full max-w-lg mx-auto mt-10">
    <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-2xl font-bold mb-6 text-gray-700">Create Category</h2>

        <div class="mb-4">
            <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="mb-6">
            <label asp-for="DisplayOrder" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="DisplayOrder" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="DisplayOrder" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Create
            </button>
            <a asp-controller="Category" asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}