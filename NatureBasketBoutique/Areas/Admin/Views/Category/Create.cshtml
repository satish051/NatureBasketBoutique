@model Category

<div class="container mx-auto px-4 py-8 max-w-lg">
    <div class="bg-white shadow-lg rounded-lg p-8 border border-gray-200">
        <h2 class="text-2xl font-bold text-green-700 mb-6 border-b pb-2">Create Category</h2>

        <form method="post">
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 font-bold mb-2">Category Name</label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-green-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="DisplayOrder" class="block text-gray-700 font-bold mb-2">Display Order</label>
                <input asp-for="DisplayOrder" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-green-500" />
                <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <a asp-controller="Category" asp-action="Index" class="text-gray-600 hover:underline">Back to List</a>
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded focus:outline-none focus:shadow-outline">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}