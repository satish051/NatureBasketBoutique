@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="max-w-2xl mx-auto p-6 bg-white shadow-md rounded-lg border border-red-100 mt-10">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
            <i class="bi bi-exclamation-triangle-fill text-3xl text-red-600"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-800">Delete Account</h3>
        <p class="text-red-600 font-medium mt-2">
            Warning: This action is permanent and cannot be undone.
        </p>
    </div>

    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        <p class="text-sm text-yellow-700">
            Deleting your account will remove all your data, order history, and personal information from our system immediately.
        </p>
    </div>

    <form id="delete-user" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-bold"></div>

        @if (Model.RequirePassword)
        {
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>
        }

        <button class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-lg shadow transition transform hover:scale-[1.02]" type="submit">
            Yes, Delete My Data and Close Account
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}