@model ShoppingCartVM

<form method="post">
    <br />
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row gap-4">

            <div class="w-full md:w-3/4 bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gray-800 text-white p-4 flex justify-between items-center">
                    <h2 class="text-xl font-semibold"><i class="bi bi-cart3"></i> Shopping Cart</h2>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-sm hover:text-green-400 text-gray-300">
                        Continue Shopping
                    </a>
                </div>

                <div class="p-4">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="flex flex-col md:flex-row items-center justify-between border-b border-gray-200 py-4 gap-4">

                            <div class="w-24 h-24 flex-shrink-0">
                                <img src="@item.Product.ImageUrl" class="w-full h-full object-cover rounded-md" />
                            </div>

                            <div class="flex-grow text-center md:text-left">
                                <h5 class="text-lg font-bold text-gray-800">@item.Product.Title</h5>
                                <p class="text-sm text-gray-600">@Html.Raw(item.Product.Description)</p>
                            </div>

                            <div class="flex items-center gap-4">
                                <div class="text-gray-800 font-semibold">
                                    @item.Product.Price.ToString("c")
                                    <span class="text-xs text-gray-500">x @item.Count</span>
                                </div>

                                <div class="flex items-center border border-gray-300 rounded">
                                    <a asp-action="Plus" asp-route-cartId="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-primary">
                                        <i class="bi bi-plus-square"></i>
                                    </a>

                                    <a asp-action="Minus" asp-route-cartId="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-warning">
                                        <i class="bi bi-dash-square"></i>
                                    </a>

                                    <a asp-action="Remove" asp-route-cartId="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>

                                <div class="text-green-700 font-bold w-20 text-right">
                                    @((item.Product.Price * item.Count).ToString("c"))
                                </div>

                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="text-red-500 hover:text-red-700 p-2">
                                    <i class="bi bi-trash-fill text-xl"></i>
                                </a>
                            </div>
                        </div>
                    }
                    @if (!Model.ShoppingCartList.Any())
                    {
                        <div class="text-center py-10 text-gray-500">
                            Your cart is empty.
                        </div>
                    }
                </div>
            </div>

            <div class="w-full md:w-1/4">
                <div class="bg-white rounded-lg shadow-md p-4">
                    <h4 class="text-lg font-bold text-gray-700 border-b pb-2 mb-4">Order Summary</h4>

                    <div class="flex justify-between items-center mb-4">
                        <span class="text-gray-600">Total (NPR)</span>
                        <span class="text-xl font-bold text-green-700">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                    </div>

                    @if (Model.ShoppingCartList.Any())
                    {
                        <a asp-action="Summary" class="block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-center shadow transition">
                            Proceed to Summary
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</form>