@model ShoppingCartVM

<form method="post">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">

            <div class="bg-green-700 text-white p-4 flex justify-between items-center">
                <h2 class="text-xl font-semibold">Order Summary</h2>
                <a asp-action="Index" class="text-sm hover:text-green-200 text-white underline">Back to Cart</a>
            </div>

            <div class="flex flex-col md:flex-row">

                <div class="w-full md:w-1/2 p-6 border-r border-gray-200">
                    <h3 class="text-lg font-bold text-gray-800 mb-4">Shipping Details</h3>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                        <input asp-for="OrderHeader.Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                        <span asp-validation-for="OrderHeader.Name" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Phone</label>
                        <input asp-for="OrderHeader.PhoneNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Street Address</label>
                        <input asp-for="OrderHeader.StreetAddress" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                        <span asp-validation-for="OrderHeader.StreetAddress" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="flex gap-4">
                        <div class="mb-4 w-1/2">
                            <label class="block text-gray-700 text-sm font-bold mb-2">City</label>
                            <input asp-for="OrderHeader.City" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                            <span asp-validation-for="OrderHeader.City" class="text-red-500 text-xs"></span>
                        </div>
                        <div class="mb-4 w-1/2">
                            <label class="block text-gray-700 text-sm font-bold mb-2">State</label>
                            <input asp-for="OrderHeader.State" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                            <span asp-validation-for="OrderHeader.State" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Postal Code</label>
                        <input asp-for="OrderHeader.PostalCode" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" />
                        <span asp-validation-for="OrderHeader.PostalCode" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <div class="w-full md:w-1/2 p-6 bg-gray-50">
                    <h3 class="text-lg font-bold text-gray-800 mb-4">Order Review</h3>

                    <ul class="mb-6">
                        @foreach (var item in Model.ShoppingCartList)
                        {
                            <li class="flex justify-between items-center border-b py-2 text-sm">
                                <div>
                                    <span class="font-bold block">@item.Product.Title</span>
                                    <span class="text-gray-500">Qty: @item.Count</span>
                                </div>
                                <span class="text-gray-700 font-semibold">
                                    @((item.Product.Price * item.Count).ToString("c"))
                                </span>
                            </li>
                        }
                    </ul>

                    <div class="flex justify-between items-center border-t border-gray-300 pt-4 mb-6">
                        <span class="text-xl font-bold text-gray-800">Total</span>
                        <span class="text-xl font-bold text-green-700">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                    </div>

                    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded shadow focus:outline-none focus:shadow-outline">
                        Place Order (Cash On Delivery)
                    </button>
                    <p class="text-xs text-gray-500 mt-2 text-center">* eSewa Integration coming in Step 7</p>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}