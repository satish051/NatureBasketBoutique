@model NatureBasketBoutique.ViewModels.ShoppingCartVM
@using Microsoft.Extensions.Options

@{
    ViewData["Title"] = "Order Summary";
}

<form method="post">
    <div class="container mx-auto px-4 py-10">

        <div class="flex items-center mb-8">
            <a asp-action="Index" class="text-green-600 hover:text-green-800 transition mr-4">
                <i class="bi bi-arrow-left-circle-fill text-3xl"></i>
            </a>
            <h2 class="text-3xl font-bold text-gray-800">Checkout Summary</h2>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">

            <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
                <h3 class="text-xl font-bold text-gray-700 mb-6 border-b pb-2">
                    <i class="bi bi-truck text-green-600 mr-2"></i> Shipping Details
                </h3>

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-600 mb-1">Full Name</label>
                        <input asp-for="OrderHeader.Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition" />
                        <span asp-validation-for="OrderHeader.Name" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-600 mb-1">Phone Number</label>
                        <input asp-for="OrderHeader.PhoneNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition" />
                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-600 mb-1">Street Address</label>
                        <input asp-for="OrderHeader.StreetAddress" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition" />
                        <span asp-validation-for="OrderHeader.StreetAddress" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="grid grid-cols-3 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-600 mb-1">City</label>
                            <input asp-for="OrderHeader.City" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
                            <span asp-validation-for="OrderHeader.City" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-600 mb-1">State</label>
                            <input asp-for="OrderHeader.State" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
                            <span asp-validation-for="OrderHeader.State" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-600 mb-1">Zip Code</label>
                            <input asp-for="OrderHeader.PostalCode" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
                            <span asp-validation-for="OrderHeader.PostalCode" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-col">
                <div class="bg-gray-50 p-8 rounded-xl shadow-lg border border-gray-200 mb-6">
                    <h3 class="text-xl font-bold text-gray-700 mb-6 border-b pb-2">
                        <i class="bi bi-bag-check text-green-600 mr-2"></i> Order Summary
                    </h3>

                    <ul class="space-y-4 mb-6 max-h-80 overflow-y-auto pr-2">
                        @foreach (var details in Model.ShoppingCartList)
                        {
                            <li class="flex justify-between items-center text-sm">
                                <div>
                                    <h6 class="font-bold text-gray-800">@details.Product.Title</h6>
                                    <span class="text-gray-500">Qty: @details.Count</span>
                                </div>
                                <span class="font-medium text-gray-700">
                                    NPR @((details.Price * details.Count).ToString("0.00"))
                                </span>
                            </li>
                        }
                    </ul>

                    <div class="flex justify-between items-center border-t border-gray-300 pt-4 mt-4">
                        <span class="text-lg font-bold text-gray-800">Total (NPR)</span>
                        <span class="text-2xl font-bold text-green-700">@Model.OrderHeader.OrderTotal.ToString("0.00")</span>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-lg border border-green-100">
                    <div class="flex items-center gap-3 text-sm text-gray-600 mb-4 bg-green-50 p-3 rounded-lg">
                        <i class="bi bi-info-circle-fill text-green-600"></i>
                        <span>Estimate Arrival Date: <strong>@DateTime.Now.AddDays(3).ToShortDateString() - @DateTime.Now.AddDays(7).ToShortDateString()</strong></span>
                    </div>

                    <button type="submit" asp-action="Summary" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 rounded-lg shadow-lg transition transform hover:-translate-y-1 flex justify-center items-center text-lg">
                        Place Order <i class="bi bi-chevron-right ml-2 text-sm"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}