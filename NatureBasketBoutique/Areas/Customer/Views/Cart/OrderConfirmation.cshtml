@model int

<div class="container mx-auto text-center py-20">
    <div class="bg-white p-10 rounded shadow-lg inline-block">
        <h1 class="text-4xl font-bold text-green-600 mb-4">Order Placed!</h1>

        <div class="text-6xl text-green-500 mb-6">
            <i class="bi bi-check-circle-fill"></i>
        </div>

        <p class="text-gray-700 text-lg mb-4">
            Your order number is <span class="font-bold text-black">#@Model</span>
        </p>

        <p class="text-gray-500 mb-8">
            We have received your order and are processing it.
        </p>

        <a asp-controller="Home" asp-action="Index" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded">
            Continue Shopping
        </a>

    </div>
</div>