@model int

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mx-auto px-4 py-16 text-center">

    <div class="max-w-md mx-auto bg-white p-8 rounded-2xl shadow-xl border border-green-100">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="bi bi-check-lg text-4xl text-green-600"></i>
        </div>

        <h1 class="text-3xl font-bold text-gray-800 mb-2">Order Placed!</h1>
        <p class="text-gray-500 mb-6">Thank you for shopping with Nature Basket Boutique.</p>

        <div class="bg-gray-50 rounded-lg p-4 mb-6 border border-dashed border-gray-300">
            <p class="text-sm text-gray-500 uppercase font-bold tracking-wider">Order Number</p>
            <p class="text-2xl font-bold text-green-700">#@Model</p>
        </div>

        <p class="text-sm text-gray-500 mb-8">
            We have received your order and are preparing it for shipment.
            You can track your status in your account orders.
        </p>

        <div class="space-y-3">
            <a asp-controller="Home" asp-action="Index" class="block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-lg shadow transition">
                Continue Shopping
            </a>
        </div>
    </div>
</div>