@model IEnumerable<NatureBasketBoutique.Models.Product>

@{
    ViewData["Title"] = "Shop Collection";
    var selectedCategories = ViewData["SelectedCategories"] as int[] ?? Array.Empty<int>();
    var categories = ViewBag.Categories as List<NatureBasketBoutique.Models.Category>;

    // Check if the sidebar was previously open (from the URL)
    bool isSidebarOpen = Context.Request.Query["showSidebar"] == "true";
}

<div class="bg-green-700 py-8 mb-6 shadow-md">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl font-bold text-white">Our Collection</h1>
        <p class="text-green-100 text-sm mt-1">Fresh from nature, curated for you.</p>
    </div>
</div>

<div class="container mx-auto px-4 pb-20">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 pb-4 border-b border-gray-200 gap-4">

        <button type="button" onclick="toggleFilterSidebar()" class="flex items-center gap-2 text-gray-700 hover:text-green-700 font-bold bg-gray-100 px-4 py-2 rounded-lg transition border border-gray-300">
            <i class="bi bi-funnel-fill"></i> Filter Categories
        </button>

        <div class="flex items-center">
            <span class="text-sm text-gray-500 mr-2">Sort by:</span>
            <select id="topSortDropdown" onchange="updateSortAndSubmit()"
                    class="border border-gray-300 rounded-md text-gray-600 px-3 py-2 text-sm focus:outline-none focus:border-green-500 bg-white cursor-pointer shadow-sm">
                <!option value="" @(ViewData["CurrentSort"] == null ? "selected" : "")>Default Sorting</!option>
                <!option value="price_asc" @(ViewData["CurrentSort"]?.ToString() == "price_asc" ? "selected" : "")>Price: Low to High</!option>
                <!option value="price_desc" @(ViewData["CurrentSort"]?.ToString() == "price_desc" ? "selected" : "")>Price: High to Low</!option>
                <!option value="newest" @(ViewData["CurrentSort"]?.ToString() == "newest" ? "selected" : "")>Newest First</!option>
            </select>
        </div>
    </div>

    <div class="flex flex-col lg:flex-row gap-8 relative">

        <aside id="filterSidebar" class="@(isSidebarOpen ? "" : "hidden") w-full lg:w-1/4 mb-6 lg:mb-0 border-r border-gray-100 pr-4 transition-all duration-300">

            <form id="filterForm" method="get" asp-action="Shop">

                @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
                {
                    <input type="hidden" name="searchString" value="@Context.Request.Query["searchString"]" />
                }
                <input type="hidden" name="sortOrder" id="hiddenSortOrder" value="@ViewData["CurrentSort"]" />

                <input type="hidden" name="showSidebar" id="showSidebarInput" value="@(isSidebarOpen ? "true" : "false")" />

                <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100 sticky top-24">
                    <div class="flex justify-between items-center mb-4 border-b pb-2">
                        <h3 class="text-xl font-bold text-gray-800">Categories</h3>
                        <button type="button" onclick="toggleFilterSidebar()" class="text-gray-400 hover:text-red-500">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>

                    <div class="mb-4 relative">
                        <input type="text" id="catSearchInput" onkeyup="filterCategories()" placeholder="Search categories..."
                               class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:border-green-500 transition" />
                        <i class="bi bi-search absolute left-3 top-2.5 text-gray-400 text-xs"></i>
                    </div>

                    <ul class="space-y-2 max-h-96 overflow-y-auto" id="categoryList">
                        <li>
                            <a asp-action="Shop" class="flex items-center text-sm font-semibold text-gray-600 hover:text-green-600 mb-2">
                                <i class="bi bi-arrow-counterclockwise mr-2"></i> Reset Filters
                            </a>
                        </li>

                        @if (categories != null)
                        {
                            @foreach (var cat in categories)
                            {
                                <li class="category-item">
                                    <label class="flex items-center cursor-pointer group p-2 rounded hover:bg-green-50 transition">
                                        <input type="checkbox" name="categoryIds" value="@cat.Id"
                                               onchange="submitWithSidebar()"
                                               @(selectedCategories.Contains(cat.Id) ? "checked" : "")
                                               class="form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 focus:ring-green-500 transition duration-150 ease-in-out" />
                                        <span class="ml-3 text-sm text-gray-700 font-medium group-hover:text-green-700">@cat.Name</span>
                                    </label>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </form>
        </aside>

        <div class="flex-1 w-full">
            @if (Model.Any())
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
                    @foreach (var product in Model)
                    {
                        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-xl transition duration-300 border border-gray-100 flex flex-col group">
                            <div class="relative h-60 overflow-hidden bg-gray-50">
                                <img src="@product.ImageUrl" class="w-full h-full object-contain p-4 transition duration-500 group-hover:scale-110" alt="@product.Title" />
                                <div class="absolute inset-0 bg-black bg-opacity-10 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
                                    <a asp-action="Details" asp-route-productId="@product.Id" class="bg-white text-green-700 py-2 px-6 rounded-full font-bold shadow-lg hover:bg-green-600 hover:text-white transition transform hover:-translate-y-1">View</a>
                                </div>
                            </div>
                            <div class="p-4 flex-grow flex flex-col">
                                <div class="text-[10px] text-green-600 font-bold uppercase tracking-wide mb-1">@product.Category.Name</div>
                                <h3 class="text-base font-bold text-gray-900 mb-2 truncate">@product.Title</h3>
                                <div class="mt-auto flex justify-between items-center pt-3 border-t border-gray-100">
                                    <span class="text-lg font-bold text-green-700">NPR @product.Price</span>
                                    <a asp-action="Details" asp-route-productId="@product.Id" class="w-8 h-8 rounded-full bg-gray-100 text-gray-600 flex items-center justify-center hover:bg-green-600 hover:text-white transition"><i class="bi bi-cart-plus-fill"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-20 bg-white rounded-xl border border-gray-100">
                    <div class="text-5xl text-gray-200 mb-4"><i class="bi bi-basket"></i></div>
                    <h2 class="text-xl font-bold text-gray-600">No products found</h2>
                    <p class="text-gray-500 mt-2 text-sm">Try adjusting your filters.</p>
                    <a asp-action="Shop" class="mt-4 inline-block bg-green-600 text-white px-6 py-2 rounded-full font-bold hover:bg-green-700 transition">View All Products</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 1. Sidebar Toggle (Manual Click)
        function toggleFilterSidebar() {
            var sidebar = document.getElementById("filterSidebar");
            var hiddenInput = document.getElementById("showSidebarInput");

            if (sidebar.classList.contains("hidden")) {
                sidebar.classList.remove("hidden");
                // User opened it manually, so we set state to true
                hiddenInput.value = "true";
            } else {
                sidebar.classList.add("hidden");
                // User closed it manually, set state to false
                hiddenInput.value = "false";
            }
        }

        // 2. Submit Form & Keep Sidebar Open
        function submitWithSidebar() {
            // Force the hidden input to true before submitting
            document.getElementById("showSidebarInput").value = "true";
            document.getElementById("filterForm").submit();
        }

        // 3. Client-Side Category Search
        function filterCategories() {
            var input, filter, ul, li, label, i, txtValue;
            input = document.getElementById("catSearchInput");
            filter = input.value.toUpperCase();
            ul = document.getElementById("categoryList");
            li = ul.getElementsByTagName("li");

            for (i = 0; i < li.length; i++) {
                // Skip the "Reset Filters" link (first item)
                label = li[i].getElementsByTagName("span")[0];
                if (label) {
                    txtValue = label.textContent || label.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        li[i].style.display = "";
                    } else {
                        li[i].style.display = "none";
                    }
                }
            }
        }

        // 4. Connect Top Sort Dropdown
        function updateSortAndSubmit() {
            document.getElementById("hiddenSortOrder").value = document.getElementById("topSortDropdown").value;
            // Keep existing sidebar state
            document.getElementById("filterForm").submit();
        }
    </script>
}