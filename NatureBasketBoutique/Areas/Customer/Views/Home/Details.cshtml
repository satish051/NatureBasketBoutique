@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />

    <div class="container mx-auto px-4 py-10">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="md:flex">

                <div class="md:w-1/2">
                    <img class="w-full h-full object-cover" src="@Model.Product.ImageUrl" alt="@Model.Product.Title">
                </div>

                <div class="md:w-1/2 p-8 flex flex-col">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-3xl font-bold text-gray-800">@Model.Product.Title</h2>
                        <span class="bg-green-100 text-green-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">
                            @Model.Product.Category.Name
                        </span>
                    </div>

                    <p class="text-gray-600 text-sm mb-4">ISBN: @Model.Product.ISBN</p>

                    <div class="mb-6">
                        <p class="text-gray-700 leading-relaxed">@Html.Raw(Model.Product.Description)</p>
                    </div>

                    <div class="flex items-baseline mb-6 border-b pb-6">
                        <span class="text-3xl font-bold text-green-700 mr-4">
                            @Model.Product.Price.ToString("c")
                        </span>
                        <span class="text-lg text-gray-400 line-through">
                            @Model.Product.ListPrice.ToString("c")
                        </span>
                    </div>

                    <div class="mt-auto">
                        <div class="flex items-center mb-4">
                            <label class="font-bold text-gray-700 mr-4">Count:</label>
                            <input asp-for="Count" type="number" value="1" min="1"
                                   class="shadow appearance-none border rounded w-20 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>

                        <div class="flex space-x-4">
                            <button type="submit"
                                    class="flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded shadow transition duration-200">
                                Add to Cart
                            </button>
                            <a asp-action="Index"
                               class="flex-1 bg-gray-600 hover:bg-gray-700 text-center text-white font-bold py-3 px-6 rounded shadow transition duration-200">
                                Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>