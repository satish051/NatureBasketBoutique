@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="relative bg-green-800 overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-green-800 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl">
                            <span class="block xl:inline">Fresh Nature,</span>
                            <span class="block text-green-300 xl:inline">Delivered to You</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Experience the finest organic products sourced directly from nature. Join NatureBasket today for exclusive deals and fresh deliveries.
                        </p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="rounded-md shadow">
                                <a asp-area="Identity" asp-page="/Account/Register" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-green-700 bg-white hover:bg-gray-50 md:py-4 md:text-lg">
                                    Get Started
                                </a>
                            </div>
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a asp-area="Identity" asp-page="/Account/Login" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-green-100 bg-green-600 hover:bg-green-700 md:py-4 md:text-lg">
                                    Log In
                                </a>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
            <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1567&q=80" alt="Organic vegetables">
        </div>
    </div>

    <div class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="lg:text-center">
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    A better way to shop organic
                </p>
                <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
                    We ensure quality, freshness, and sustainability in every basket we deliver.
                </p>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold text-gray-800">Shop Products</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            @foreach (var product in Model)
            {
                <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col hover:shadow-2xl transition-shadow duration-300">
                    <div class="h-64 overflow-hidden relative group">
                        <img src="@product.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500" alt="@product.Title" />
                    </div>

                    <div class="p-5 flex-grow flex flex-col justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-gray-800 uppercase truncate">@product.Title</h3>
                            <p class="text-sm text-gray-500 mb-2">by @product.ISBN</p>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                @Html.Raw(product.Description)
                            </p>
                        </div>

                        <div>
                            <div class="flex justify-between items-center mb-4">
                                <span class="text-sm text-gray-400 line-through">NPR @product.ListPrice.ToString("0")</span>
                                <span class="text-xl font-bold text-green-600">NPR @product.Price.ToString("0")</span>
                            </div>

                            <a asp-action="Details" asp-route-productId="@product.Id"
                               class="block w-full text-center bg-green-700 hover:bg-green-800 text-white font-bold py-2 px-4 rounded transition">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}