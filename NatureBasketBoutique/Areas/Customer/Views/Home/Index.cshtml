@model IEnumerable<Product>

<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

        @foreach (var product in Model)
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col hover:shadow-2xl transition-shadow duration-300">
                <div class="h-64 overflow-hidden relative group">
                    <img src="@product.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500" alt="@product.Title" />
                </div>

                <div class="p-5 flex-grow flex flex-col justify-between">
                    <div>
                        <h3 class="text-lg font-bold text-gray-800 uppercase truncate">@product.Title</h3>
                        <p class="text-sm text-gray-500 mb-2">by @product.ISBN</p>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                            @Html.Raw(product.Description)
                        </p>
                    </div>

                    <div>
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-sm text-gray-400 line-through">NPR @product.ListPrice.ToString("0")</span>
                            <span class="text-xl font-bold text-green-600">NPR @product.Price.ToString("0")</span>
                        </div>

                        <a href="/Customer/Home/Details?productId=@product.Id"
                           class="block w-full text-center bg-green-700 hover:bg-green-800 text-white font-bold py-2 px-4 rounded transition">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>