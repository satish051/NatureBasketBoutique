@using Microsoft.AspNetCore.Identity
@using NatureBasketBoutique.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a id="manage" class="text-green-100 hover:text-white font-medium text-sm transition" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @UserManager.GetUserName(User)!
            </a>
        </li>
        <li>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="bg-green-800 hover:bg-green-900 text-white px-3 py-1 rounded text-sm transition">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="text-green-100 hover:text-white font-medium text-sm transition" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="bg-white text-green-700 hover:bg-gray-100 px-3 py-1 rounded text-sm font-bold transition" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>