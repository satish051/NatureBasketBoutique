@using Microsoft.AspNetCore.Identity
@using NatureBasketBoutique.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    // Fetch the full user object to get the custom "Name" property
    var appUser = await UserManager.GetUserAsync(User);

    <div class="flex items-center gap-4">
        <a asp-area="Customer" asp-controller="Account" asp-action="Profile" class="text-gray-600 text-sm hover:text-green-600 font-semibold transition">
            Hello, @(appUser?.Name ?? User.Identity?.Name)!
        </a>

        <form id="logoutForm" class="inline" asp-area="Customer" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="text-gray-600 hover:text-red-500 transition font-semibold text-sm">Logout</button>
        </form>
    </div>
}
else
{
    <div class="flex items-center gap-4 border-l pl-4 border-gray-300">
        <a class="text-gray-600 hover:text-green-600 transition font-semibold" asp-area="Customer" asp-controller="Account" asp-action="Login">Login</a>
        <a class="bg-green-600 text-white px-4 py-2 rounded-full hover:bg-green-700 transition text-sm font-bold" asp-area="Customer" asp-controller="Account" asp-action="Register">Register</a>
    </div>
}