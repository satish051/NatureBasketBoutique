<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nature Basket Boutique</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body class="flex flex-col min-h-screen bg-gray-50 font-sans">

    <header class="sticky top-0 z-50 bg-white shadow-md">
        <nav class="container mx-auto px-6 py-3">
            <div class="flex flex-wrap justify-between items-center">

                <a class="text-2xl font-bold text-green-700 flex items-center gap-2 mr-6" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket-fill"></i> Nature Basket Boutique
                </a>

                <div class="flex-grow max-w-md hidden md:block mx-4">
                    <form asp-area="Customer" asp-controller="Home" asp-action="Shop" method="get" class="relative group">
                        <input type="text" name="searchString" placeholder="Search for fresh products..."
                               class="w-full bg-gray-100 text-gray-700 border border-gray-200 rounded-full py-2 px-4 pl-12
                                focus:outline-none focus:bg-white focus:border-green-500 transition shadow-sm" />
                        <button type="submit" class="absolute left-0 top-0 mt-2 ml-3 text-gray-500 group-focus-within:text-green-600">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>

                <div class="flex items-center space-x-6">
                    <div class="hidden md:flex space-x-6 items-center text-sm font-semibold uppercase tracking-wide">
                        <a class="text-gray-600 hover:text-green-600 transition" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-600 hover:text-green-600 transition" asp-area="Customer" asp-controller="Home" asp-action="Shop">Products</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="text-gray-600 hover:text-green-600 transition" asp-area="Customer" asp-controller="Order" asp-action="Index">My Orders</a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <div class="relative group z-50">
                                <button class="text-gray-600 hover:text-green-600 flex items-center gap-1">
                                    Admin <i class="bi bi-chevron-down text-xs"></i>
                                </button>
                                <div class="absolute hidden group-hover:block bg-white shadow-xl rounded-lg mt-0 w-48 border border-gray-100 py-2 right-0">
                                    <a class="block px-4 py-2 hover:bg-green-50 text-gray-700 normal-case" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
                                    <a class="block px-4 py-2 hover:bg-green-50 text-gray-700 normal-case" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                                    <div class="border-t my-1"></div>
                                    <a class="block px-4 py-2 hover:bg-green-50 text-gray-700 normal-case" asp-area="Admin" asp-controller="Order" asp-action="Index">Manage Orders</a>
                                </div>
                            </div>
                        }

                        <partial name="_LoginPartial" />
                    </div>

                    <a class="relative text-gray-500 hover:text-green-600 transition" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3 text-2xl"></i>
                    </a>
                </div>
            </div>

            <div class="md:hidden mt-3">
                <form asp-area="Customer" asp-controller="Home" asp-action="Shop" method="get" class="relative">
                    <input type="text" name="searchString" placeholder="Search..."
                           class="w-full bg-gray-100 border border-gray-200 rounded-lg py-2 px-4 pl-10 focus:outline-none focus:border-green-500" />
                    <button type="submit" class="absolute left-0 top-0 mt-2 ml-3 text-gray-500">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        <partial name="_Notification" />
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-white py-12 mt-auto">
        <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="col-span-1 md:col-span-1">
                <h3 class="text-xl font-bold mb-4 flex items-center gap-2"><i class="bi bi-basket-fill text-green-500"></i> Nature Basket</h3>
                <p class="text-gray-400 text-sm">Fresh organic products delivered directly from nature to your doorstep.</p>
            </div>

            <div>
                <h4 class="font-bold mb-4 text-green-400">Shop</h4>
                <ul class="space-y-2 text-sm text-gray-400">
                    <li><a href="#" class="hover:text-white transition">All Products</a></li>
                    <li><a href="#" class="hover:text-white transition">Fresh Fruits</a></li>
                    <li><a href="#" class="hover:text-white transition">Organic Veggies</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold mb-4 text-green-400">Support</h4>
                <ul class="space-y-2 text-sm text-gray-400">
                    <li><a href="#" class="hover:text-white transition">Order Tracking</a></li>
                    <li><a asp-area="Customer" asp-controller="Home" asp-action="Privacy" class="hover:text-white transition">Privacy Policy</a></li>
                    <li><a href="#" class="hover:text-white transition">Terms & Conditions</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold mb-4 text-green-400">Newsletter</h4>
                <div class="flex flex-col gap-2">
                    <input type="text" placeholder="Your email" class="px-3 py-2 bg-gray-800 text-white rounded focus:outline-none border border-gray-700 focus:border-green-500 transition" />
                    <button class="bg-green-600 px-4 py-2 rounded text-sm font-bold hover:bg-green-700 transition">Subscribe</button>
                </div>
            </div>
        </div>
        <div class="text-center text-gray-600 text-xs mt-10 border-t border-gray-800 pt-6">
            &copy; @DateTime.Now.Year Nature Basket Boutique. All Rights Reserved.
        </div>
        <partial name="_LoginPartial" />

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
