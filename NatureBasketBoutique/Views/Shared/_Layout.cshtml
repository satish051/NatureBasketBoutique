@using NatureBasketBoutique.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nature Basket</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <header>
        <nav class="bg-green-700 text-white shadow-lg">
            <div class="container mx-auto px-4">
                <div class="flex justify-between items-center py-4">

                    <a class="text-2xl font-bold hover:text-green-200 transition" asp-area="Customer" asp-controller="Home" asp-action="Index">
                        Nature Basket
                    </a>

                    <button class="md:hidden text-white focus:outline-none">
                        <i class="bi bi-list text-3xl"></i>
                    </button>

                    <div class="hidden md:flex space-x-6 items-center">
                        <a class="hover:text-green-200 font-medium" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>

                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <div class="relative group z-50">
                                <button class="hover:text-green-200 font-medium flex items-center">
                                    Content Management <i class="bi bi-chevron-down ml-1 text-sm"></i>
                                </button>
                                <div class="absolute hidden group-hover:block bg-white text-gray-800 shadow-xl rounded-md mt-0 w-48 border border-gray-200">
                                    <a class="block px-4 py-2 hover:bg-green-50 hover:text-green-700 transition" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
                                    <a class="block px-4 py-2 hover:bg-green-50 hover:text-green-700 transition" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                                    <div class="border-t border-gray-100"></div>
                                    <a class="block px-4 py-2 hover:bg-green-50 hover:text-green-700 transition"
                                       href="/Admin/Order/Index">
                                        Order Management
                                    </a>
                                </div>
                            </div>
                        }


                        <a class="hover:text-green-200 font-medium" href="/Admin/Order/Index">
                            My Orders
                        </a>
                        <a class="relative hover:text-green-200 transition" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart3 text-xl"></i>
                        </a>
                    </div>

                    <div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8 flex-grow">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-white py-6 mt-auto">
        <div class="container mx-auto text-center text-sm">
            &copy; 2024 - Nature Basket Boutique - <a href="#" class="hover:text-green-400">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>