@using NatureBasketBoutique.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nature Basket</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <header>
        <nav class="bg-green-700 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
                <div class="relative flex items-center justify-between h-16">

                    <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                        <div class="flex-shrink-0 flex items-center">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="font-bold text-2xl tracking-wider hover:text-green-200 transition">
                                <i class="bi bi-basket3-fill"></i> NatureBasket
                            </a>
                        </div>

                        <div class="hidden sm:block sm:ml-6">
                            <div class="flex space-x-4">
                                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                                   class="bg-green-800 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-green-600 transition">
                                    Home
                                </a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                {
                                    <a asp-area="Admin" asp-controller="Order" asp-action="Index"
                                       class="text-green-100 hover:bg-green-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                        Manage Orders
                                    </a>

                                    <div class="relative group">
                                        <button class="text-green-100 hover:bg-green-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition flex items-center">
                                            Content Management
                                            <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                                        </button>
                                        <div class="absolute z-10 left-0 mt-0 w-48 bg-white rounded-md shadow-lg py-1 hidden group-hover:block">
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Category</a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Product</a>
                                            <div class="border-t border-gray-100"></div>
                                            <a asp-area="Identity" asp-page="/Account/Register" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Create User</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">

                        @if (!User.IsInRole("Admin"))
                        {
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="group -m-2 p-2 flex items-center mr-4 text-green-100 hover:text-white">
                                <i class="bi bi-cart3 text-2xl"></i>
                            </a>
                        }

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>

            <div class="sm:hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="bg-green-900 text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="text-gray-300 hover:bg-green-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Orders</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8 flex-grow">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-white py-6 mt-auto">
        <div class="container mx-auto text-center text-sm">
            &copy; 2024 - Nature Basket Boutique - <a href="#" class="hover:text-green-400">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>