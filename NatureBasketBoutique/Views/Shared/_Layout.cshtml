<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nature Basket Boutique</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NatureBasketBoutique.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body class="flex flex-col min-h-screen">
    <header>
        <nav class="bg-green-700 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
                <div class="relative flex items-center justify-between h-16 gap-4">

                    <div class="flex-shrink-0 flex items-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="font-bold text-xl sm:text-2xl tracking-wider hover:text-green-200 transition flex items-center gap-2">
                            <i class="bi bi-basket3-fill"></i>
                            <span class="hidden sm:inline">Nature Basket Boutique</span>
                            <span class="sm:hidden">NatureBasket</span>
                        </a>
                    </div>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        /* ==========================================
                        GUEST VIEW: Search Bar + Cart + Login/Reg
                        ========================================== */

                        // 2. SEARCH BAR (Takes up remaining space)
                        <div class="flex-1 max-w-2xl px-4">
                            <form asp-controller="Home" asp-action="Index" method="get" class="relative group">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="bi bi-search text-gray-400 group-focus-within:text-green-600"></i>
                                </div>
                                <input type="text" name="searchString"
                                       class="block w-full pl-10 pr-3 py-2 border border-transparent rounded-md leading-5 bg-green-800 text-green-100 placeholder-green-300 focus:outline-none focus:bg-white focus:text-gray-900 focus:placeholder-gray-400 sm:text-sm transition duration-150 ease-in-out"
                                       placeholder="Search for fresh products...">
                            </form>
                        </div>

                        // 3. RIGHT SIDE ACTIONS (Cart & Auth)
                        <div class="flex items-center space-x-4">
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="text-green-100 hover:text-white relative p-1">
                                <i class="bi bi-cart3 text-2xl"></i>
                            </a>

                            <div class="flex items-center space-x-2">
                                <a asp-area="Identity" asp-page="/Account/Login" class="text-sm font-medium hover:text-green-200 transition">Login</a>
                                <span class="text-green-400">|</span>
                                <a asp-area="Identity" asp-page="/Account/Register" class="text-sm font-bold bg-white text-green-700 px-3 py-1 rounded hover:bg-gray-100 transition">Register</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        /* ==========================================
                        LOGGED IN VIEW: Standard Menu + Admin Tools
                        ========================================== */

                        // 2. MAIN LINKS (Left Aligned)
                        <div class="hidden sm:block ml-6 flex-1">
                            <div class="flex space-x-4">
                                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                                   class="bg-green-800 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-green-600 transition">
                                    Home
                                </a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                {
                                    <a asp-area="Admin" asp-controller="Order" asp-action="Index"
                                       class="text-green-100 hover:bg-green-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                        Manage Orders
                                    </a>

                                    <div class="relative group">
                                        <button class="text-green-100 hover:bg-green-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition flex items-center">
                                            CMS <i class="bi bi-chevron-down ml-1 text-xs"></i>
                                        </button>
                                        <div class="absolute z-10 left-0 mt-0 w-48 bg-white rounded-md shadow-lg py-1 hidden group-hover:block">
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Category</a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Product</a>
                                            <div class="border-t border-gray-100"></div>
                                            <a asp-area="Identity" asp-page="/Account/Register" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Create User</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        // 3. RIGHT SIDE (Cart & Profile)
                        <div class="flex items-center ml-auto">
                            @if (!User.IsInRole("Admin"))
                            {
                                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="mr-4 text-green-100 hover:text-white">
                                    <i class="bi bi-cart3 text-2xl"></i>
                                </a>
                            }
                            <partial name="_LoginPartial" />
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t text-muted bg-gray-50 mt-auto">
        <div class="container mx-auto py-4 text-center">
            &copy; 2024 - Nature Basket Boutique - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-green-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>